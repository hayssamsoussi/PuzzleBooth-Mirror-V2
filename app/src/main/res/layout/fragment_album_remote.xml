<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:gravity="center"
    tools:context=".fragments.AlbumFragment">

    <Button
        android:id="@+id/btnShowAlbum"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="40dp"
        android:backgroundTint="#002091"
        android:text="Show Album" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAlbumPrevious"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:backgroundTint="#002091"
            android:text="&lt; Album" />

        <Button
            android:id="@+id/btnAlbumNext"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:backgroundTint="#002091"
            android:text="Album &gt;" />

    </LinearLayout>


    <Button
        android:id="@+id/btnAlbumQR"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="40dp"
        android:backgroundTint="#002091"
        android:text="Album QR" />

    <Button
        android:id="@+id/btnALbumPrint"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="40dp"
        android:backgroundTint="#002091"
        android:layout_marginBottom="50dp"
        android:text="Album Print" />

    <Button
        android:id="@+id/btnCloseAlbum"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginHorizontal="40dp"
        android:backgroundTint="#600606"
        android:text="X" />

</LinearLayout>