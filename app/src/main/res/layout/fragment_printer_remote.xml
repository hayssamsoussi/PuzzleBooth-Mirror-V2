<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".fragments.PrinterFragment">

    <ProgressBar
        android:id="@+id/connectingProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginBottom="30dp"/>

    <EditText
        android:id="@+id/etIP"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_marginHorizontal="40dp"
        android:inputType="textPhonetic"
        android:layout_height="50dp"
        android:background="#757575"/>

    <EditText
        android:id="@+id/etPort"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="40dp"
        android:layout_height="50dp"
        android:background="#757575"/>

    <Button
        android:id="@+id/btnSendIP"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#002091"
        android:text="Submit" />

    <Button
        android:id="@+id/btnAutoConnectPrinter"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:visibility="gone"
        android:layout_marginHorizontal="40dp"
        android:backgroundTint="#002091"
        android:text="Auto connect" />

    <Button
        android:id="@+id/btnTestPrint"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="40dp"
        android:backgroundTint="#002091"
        android:layout_marginBottom="50dp"
        android:text="Test Print" />

</LinearLayout>