<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="@drawable/rounded_rectangle_dialog_white"
    android:gravity="center">

    <TextView
        android:id="@+id/btn_create_batch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:visibility="visible"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/container_counter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:paddingEnd="20dp"
                    android:text="Name:"/>

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_rectangle_white"
                    android:cursorVisible="false"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:inputType="textPersonName"
                    android:maxEms="4"
                    android:textSize="24dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:paddingEnd="20dp"
                    android:text="Email: "/>

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_rectangle_white"
                    android:cursorVisible="false"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:inputType="textEmailAddress"
                    android:maxEms="4"
                    android:textSize="24dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:paddingEnd="20dp"
                    android:text="Phone:"/>

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_rectangle_white"
                    android:cursorVisible="false"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:inputType="number"
                    android:maxEms="4"
                    android:textSize="24dp" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/btn_submit"
        android:layout_marginTop="90dp"
        android:background="@drawable/button_submit_background"
        android:text="Submit"
        app:backgroundTint="#202020"
        android:textColor="#FFFFFF"
        android:padding="20dp"
        android:textSize="14sp"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_skip"
        android:layout_marginTop="10dp"
        app:backgroundTint="#980012"
        android:background="@drawable/button_submit_background"
        android:text="Skip"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>